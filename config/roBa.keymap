#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

&mt {
    flavor = "balanced";
    quick-tap-ms = <0>;
};

&trackball {
    automouse-layer = <4>;
    scroll-layers = <5>;

    // arrows {
    //     layers = <3>;
    //     bindings =
    //         <&kp RIGHT_ARROW>,
    //         <&kp LEFT_ARROW>,
    //         <&kp UP_ARROW>,
    //         <&kp DOWN_ARROW>;
    //     tick = <10>;
    //     wait-ms = <5>;
    //     tap-ms = <5>;
    // };
};

/ {
    combos { compatible = "zmk,combos"; };

    macros {
        A_PIN: A_PIN {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp N0 &kp N8 &kp N0 &kp N9 &kp NUMBER_2 &kp N7>;
            label = "A_PIN";
        };

        A_HAN_ENTER: A_HAN_ENTER {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp F8 &kp ENTER>;
            label = "A_HAN_ENTER";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp Q             &kp W      &kp E      &kp R        &kp T                                               &kp Y        &kp U  &kp I     &kp O     &kp P
&kp A             &kp S      &kp D      &kp F        &kp G            &kp LS(LG(S))      &kp COMMA       &kp H        &kp J  &kp K     &kp L     &lt 5 MINUS
&mt LEFT_SHIFT Z  &kp X      &kp C      &kp V        &kp B            &kp AT_SIGN        &kp PERIOD      &kp N        &kp M  &mkp MB1  &mkp MB2  &mt RIGHT_SHIFT SLASH
&kp LCTRL         &kp LANG1  &kp LANG2  &lt 2 SPACE  &lt 5 LS(SPACE)  &lt 3 TAB          &lt 6 LEFT_GUI  &lt 1 ENTER                             &kp BACKSPACE
            >;

            sensor-bindings = <&inc_dec_kp PG_UP PAGE_DOWN>;
        };

        FUNCTION {
            bindings = <
&kp ESCAPE  &trans  &trans  &trans  &trans                      &none   &kp F7  &kp F8  &kp F9  &kp F10
&trans      &trans  &trans  &trans  &trans  &trans      &none   &none   &kp F4  &kp F5  &kp F6  &kp F11
&trans      &trans  &trans  &trans  &trans  &trans      &trans  &trans  &kp F1  &kp F2  &kp F3  &kp F12
&trans      &trans  &trans  &trans  &trans  &trans      &trans  &trans                          &kp DELETE
            >;
        };

        NUM {
            bindings = <
&kp ESCAPE  &none   &none   &none      &none                               &none         &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &kp KP_NUMBER_0
&none       &none   &none   &kp LS(F)  &none   &none       &kp UNDERSCORE  &none         &kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_NUMBER_6  &kp COLON
&none       &none   &none   &none      &none   &none       &kp PERIOD      &none         &kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &kp SLASH
&trans      &trans  &trans  &trans     &trans  &trans      &trans          &A_HAN_ENTER                                                     &kp DEL
            >;
        };

        SYMBOL {
            bindings = <
&kp ESCAPE  &kp LCTRL       &kp TILDE      &kp LEFT_BRACE    &kp RIGHT_BRACE                            &trans                &kp SQT          &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &trans
&none       &kp PLUS        &kp COLON      &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &trans      &kp COMMA   &trans                &kp DOLLAR       &kp PERCENT           &kp AMPERSAND          &kp MINUS
&kp TILDE   &kp UNDERSCORE  &kp SEMICOLON  &kp LESS_THAN     &kp GREATER_THAN   &kp AT      &kp PERIOD  &kp NON_US_BACKSLASH  &kp EXCLAMATION  &kp DOUBLE_QUOTES     &kp HASH               &kp SLASH
&trans      &trans          &trans         &trans            &trans             &trans      &trans      &trans                                                                              &kp DEL
            >;

            sensor-bindings = <&inc_dec_kp LC(PAGE_UP) LC(PAGE_DOWN)>;
        };

        MOUSE {
            bindings = <
&trans  &trans  &trans  &trans  &trans                      &trans  &trans  &trans    &trans    &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &none   &none     &none     &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &mkp MB1  &mkp MB2  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans                              &trans
            >;
        };

        SCROLL {
            bindings = <
&kp ESCAPE  &trans  &trans  &trans  &trans                      &trans  &trans  &trans    &trans    &trans
&trans      &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &trans    &trans    &trans
&trans      &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &mkp MB1  &mkp MB2  &trans
&A_PIN      &trans  &trans  &trans  &trans  &trans      &trans  &trans                              &kp DEL
            >;
        };

        ADJUST {
            bindings = <
&trans  &trans  &trans  &trans  &trans                           &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4
&trans  &trans  &trans  &trans  &trans  &trans      &trans       &trans        &trans        &trans        &trans        &trans
&trans  &none   &none   &none   &trans  &trans      &bootloader  &trans        &trans        &trans        &trans        &bt BT_CLR
&trans  &trans  &trans  &trans  &trans  &trans      &trans       &trans                                                  &bt BT_CLR_ALL
            >;
        };
    };
};
